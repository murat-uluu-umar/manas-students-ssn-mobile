<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kg.manas.ssn">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".service.AppPreferences"
        android:icon="@drawable/ic_group_26"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:label="@string/app_short_name">
        <activity
            android:name=".view.home.comment.CommentActivity"
            android:windowSoftInputMode="adjustResize"
            />
        <activity
            android:name=".view.login.ActivityLogin"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTask"
            android:label="@string/app_short_name"/>
        <activity
            android:name=".view.login.ActivityForgot"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_short_name"/>
        <activity
            android:name=".view.registration.ActivityRegistration"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_short_name"/>
        <activity
            android:name=".view.ActivityMain"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_short_name"/>
        <activity
            android:name=".view.splash.ActivitySplash"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_short_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>